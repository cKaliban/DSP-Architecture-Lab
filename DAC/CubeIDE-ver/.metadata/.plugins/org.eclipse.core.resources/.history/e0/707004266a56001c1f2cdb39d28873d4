void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef * htim){
	if(htim == &htim2){
		dds_step = dds_sampling_frequency * DAC_BUFF_LEN / dds_frequency;
		dds_phase_acc += dds_step;
		if(dds_phase_acc > DAC_BUFF_LEN){
			dds_phase_acc -= DAC_BUFF_LEN;
		}

	}
}

void HAL_GPIO_EXTI_Callback(uint16_t GPIO_pin){
	if(GPIO_pin == 0){
		if(dds_f_index < DDS_TABLE_LEN){
			dds_frequency = dds_f_table[dds_f_index];
			dds_f_index++;
		}
		else{
			dds_f_index = 0;
			dds_frequency = dds_f_table[dds_f_index];
			dds_f_index++;
		}
	}
}
